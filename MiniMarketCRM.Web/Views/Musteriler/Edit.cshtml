@model MiniMarketCRM.Application.DTO.MusteriUpsertDTO
@{
    var id = (int)ViewBag.MusteriId;
}

<h2>Müşteri Düzenle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Edit" asp-route-id="@id" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input class="form-control" asp-for="Ad" />
    </div>

    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input class="form-control" asp-for="Soyad" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>

    <button class="btn btn-warning" type="submit">Güncelle</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</form>
