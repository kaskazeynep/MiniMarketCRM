@model List<MiniMarketCRM.Application.DTO.MusteriDTO>

<h2>Müşteri Seç</h2>

<div class="mb-3 d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Musteriler" asp-action="Index"> Müşteri Listesi</a>
    <a class="btn btn-success" asp-controller="Musteriler" asp-action="Create"> + Yeni Müşteri Ekle </a>
</div>

<form asp-action="Select" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Müşteri</label>
        <select name="musteriId" class="form-select" required>
            <option value="">-- Seçiniz --</option>
            @foreach (var m in Model)
            {
                <option value="@m.MusteriId">@m.Ad @m.Soyad (@m.Email)</option>
            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Devam Et</button>
</form>
