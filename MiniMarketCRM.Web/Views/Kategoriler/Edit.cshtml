@model MiniMarketCRM.Application.DTO.KategoriUpsertDTO

@{
    var id = (int)ViewBag.KategoriId;
}

<h2>Kategori Güncelle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Edit" asp-route-id="@id" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Kategori Adı</label>
        <input asp-for="KategoriAdi" class="form-control" />
        <span asp-validation-for="KategoriAdi" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <button class="btn btn-warning" type="submit">Güncelle</button>
    <a class="btn btn-secondary" asp-action="Index">İptal</a>
</form>
